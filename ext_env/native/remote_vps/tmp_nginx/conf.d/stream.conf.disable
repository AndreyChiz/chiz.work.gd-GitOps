stream {
    map $ssl_preread_server_name $upstream {
        chizvpn.ddns.net  xray_vpn;  
        default             website;    
    }

    upstream xray_vpn {
        server 127.0.0.1:8444;
    }

    upstream website {
        server 127.0.0.1:8443;
    }

    server {
        listen 443;
        proxy_pass $upstream;
        ssl_preread on;
    }
}
